<div class="container-fluid">

    <div class="row">
        <div class="col-md-8">
            {{{form_search}}}
        </div>

        <div class="col-md-4 text-end">
            <a class="btn btn-secondary" href="{{return_url}}">{{#str}}return, block_list_user{{/str}}</a>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{#str}}firstname{{/str}}</th>
                <th>{{#str}}lastname{{/str}}</th>
                <th>{{#str}}email{{/str}}</th>
                <th>{{#str}}idnumber{{/str}}</th>
                <th>{{#str}}username{{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#users}}
            <tr>
                <td>{{firstname}}</td>
                <td>{{lastname}}</td>
                <td>{{email}}</td>
                <td>{{idnumber}}</td>
                <td>{{username}}</td>
            </tr>
            {{/users}}
            {{^users}}
        <tr>
            <td colspan="5" class="text-center font-weight-bold h2">{{#str}}nousers, block_list_user{{/str}}</td>
        </tr>
        {{/users}}
        </tbody>
    </table>

    {{#haspagination}}
    <div class="row mt-3">
        <div class="col-12">
            {{{pagination}}}
        </div>
    </div>
    {{/haspagination}}
</div>